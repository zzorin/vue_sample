    <%= javascript_pack_tag 'main' %>
    <meta name="viewport" content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0'>
  </head>

  <body>
    <%= render partial: 'navigation' %>
    <div class='container'>
      <div id="app" :init-user="initParams(<%= @init_params.to_json %>)">
